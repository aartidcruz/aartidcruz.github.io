#footer
  clear both

.bg-header
  background-image url("/assets/img/bg-header.png")
  background-repeat no-repeat
  background-size cover
  background-position left center
  width 100%
  min-height 800px
  color white
  position relative
  display table
  // margin-bottom 90px
  position: relative;
  &:after
    background: inherit;
    content: '';
    display: block;
    height: 10%;
    left: 0;
    position: absolute;
    right: 0;
    z-index: 3;
    -webkit-backface-visibility: hidden; // for Chrome Windows
    bottom: 0;
    transform: skewY(-1.5deg);
    transform-origin: 100% 0;

  .intro-text
    display table-cell
    vertical-align middle
    z-index 2
    position relative
    pointer-events none

.block-grey
  background-color lt-grey

.about-me
  background: white;
  position: relative;
  z-index: 2;

  &:after
    background: inherit;
    content: '';
    display: block;
    height: 50%;
    left: 0;
    position: absolute;
    right: 0;
    z-index: -1;
    -webkit-backface-visibility: hidden; // for Chrome Windows
    bottom: 0;
    transform: skewY(-1.5deg);
    transform-origin: 100%;


.right
  img
    max-width 170px

.rocket-moon
  position absolute
  left 0
  bottom 0
  width 100%

.rocket,
.moon
  position absolute
  left 0

.moon
  bottom -4em

.rocket
  bottom 13em

.rocket
  width 30%
  max-width 230px
  z-index  1
  transition(all 500ms cubic-bezier(0.645, 0.045, 0.355, 1.000))
  transition-timing-function(cubic-bezier(0.645, 0.045, 0.355, 1.000))

.moon
  width 37%
  max-width 400px
  min-width 230px
  transition(all 500ms cubic-bezier(0.645, 0.045, 0.355, 1.000))
  transition-timing-function(cubic-bezier(0.645, 0.045, 0.355, 1.000))

