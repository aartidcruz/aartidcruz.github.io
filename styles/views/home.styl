.bg-header
  position relative
  background-image url("/assets/img/bg-header.png")
  background-repeat no-repeat
  background-size cover
  background-position left center
  width 100%
  min-height 800px
  color white
  display table
  &:after
    background inherit
    content ''
    display block
    height 10%
    left 0
    position: absolute
    right 0
    z-index 3
    -webkit-backface-visibility hidden // for Chrome Windows
    bottom 0
    transform skewY(-1.5deg)
    transform-origin 100% 0

  .intro-text
    display table-cell
    vertical-align middle
    z-index 2
    position relative
    pointer-events none

.block-grey
  background-color lt-grey

.subtitle
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

.about-me
  background white
  position relative
  z-index 2

  &:after
    background inherit
    content ''
    display block
    height 50%
    left 0
    position absolute
    right 0
    z-index -1
    -webkit-backface-visibility hidden // for Chrome Windows
    bottom 0
    transform skewY(-1.5deg)
    transform-origin 100%

.rocket-moon
  position absolute
  left 0
  bottom 0
  width 100%

.rocket,
.moon
  position absolute
  left 0

.rocket
  bottom 13em
  z-index 5
  width 30%
  max-width 230px
  transition(all 500ms cubic-bezier(0.645, 0.045, 0.355, 1.000))
  transition-timing-function(cubic-bezier(0.645, 0.045, 0.355, 1.000))

.moon
  bottom -4em
  z-index 4
  width 35%
  max-width 400px
  min-width 230px
  transition(all 500ms cubic-bezier(0.645, 0.045, 0.355, 1.000))
  transition-timing-function(cubic-bezier(0.645, 0.045, 0.355, 1.000))

.device
  background-repeat no-repeat
  background-size contain
  background-position center center

.mobile
  background-image url("/assets/img/mobile.png")
  height 600px

.desktop
  background-image url("/assets/img/desktop.png")
  height 680px
  img
    margin-top 20px
    width 729px

