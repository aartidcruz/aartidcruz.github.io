.bg-lt-blue
  background-color #dff2f7
  clear both

.section
  position: relative

.center
  position relative
  top 50%
  transform translateY(-50%)

.table
  display table

.hide
  display none

.table-cell
  display table-cell
  vertical-align middle

.tight
  padding: 0 !important

