html,
body
  height 100%

body
  margin 0
  padding 0
  width 100%
  font-size 1.2em
  line-height 1.5
  font-family 'Alegreya Sans', sans-serif
  color #2c3a48
  font-weight normal
  text-align center
  -webkit-font-smoothing anti-aliased
  box-sizing border-box
  // padding 10px
  &.loaded
    overflow-y: auto

  a
    text-decoration none
    color transparentify(#2c3a48, 0.3)
    transition all 300ms
    &:hover
      text-decoration none
      color #2c3a48

  .border-top,
  .border-right,
  .border-left,
  .border-bottom
    position fixed
    background-color white
    z-index 10

  .border-top
    left 0
    right 0
    top 0
    height 10px

  .border-right
    right 0
    bottom 0
    width 10px
    top 0

  .border-left
    left 0
    width 10px
    bottom 0
    top 0

  .border-bottom
    bottom 0
    left 0
    right 0
    height 10px

.section
  height 100vh
  @media screen and (max-width 768px)
    height auto
