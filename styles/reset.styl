html,
body
  max-height 100%
  height 100%
  
body
  margin 0
  padding 0
  width 100%
  font-size 100%
  line-height 1.5
  font-family "alice", sans-serif
  color #515151
  font-weight normal
  text-align center
  overflow hidden
  &.loaded
    overflow-y: auto
    
.section
  height 100%
  @media screen and (max-width 768px)
    height auto
  
