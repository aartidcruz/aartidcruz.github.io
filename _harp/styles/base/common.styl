.bg-lt-blue
  background-color #dff2f7
  clear both

.block-navy
  background-color blue
  z-index 2
  position relative
  color white

.block-dark
  background-color #212B35
  color white

.section
  position: relative
  height 100vh
  @media screen and (max-width: 1025px)
    height auto

.center
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 100%

.table
  display table

.hide
  display none

.table-cell
  display table-cell
  vertical-align middle

.tight
  padding: 0 !important
