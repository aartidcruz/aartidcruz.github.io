#intro
  color $blue

#about-me
  background $blue
  color white
  position relative
  z-index 2

@keyframes pulse
  0%
    transform(translate(-30%, 0%))
  100%
    transform(translate(-30%, 5%))

@keyframes pulseMobile
  0%
    transform(translate(-40%, 15%))
  100%
    transform(translate(-40%, 20%))

.works,
footer
  z-index 3

footer
  position relative

.works
  box-sizing border-box
  background white
  .subtitle
    font-size 18px
    color $green

.work-img
  height auto

.work
  box-shadow(0px 20px 70px 0px rgba(44,58,72,0.34))

#steakmatejapan
  .work-mobile
    display inline-block
    width 50%
    max-width 350px

#lambroast
  .work
    width 590px
    max-width 100%


@keyframes moveUp
  0%
    transform(translate(0, 0))
  50%
    transform(translate(0, 10px))
  100%
    transform(translate(0, 0))

@keyframes dash
  0%
    transform(translate(-100%, 0))
  50%
    transform(translate(0, 0))
  99%
    transform(translate(0.9px, 0))
  100%
    transform(translate(0, 0))

@media screen and (max-height: 768px) and (min-width $screen-md-min)
  .work
    height 100%
  #steakmatejapan
    .work-mobile
      width 50% !important
      max-width 300px

  #lambroast
    .work
      width auto !important
      max-width 500px !important


@media screen and (max-height: 600px)
  #lambroast
    .work
      width auto !important
      max-width 400px !important
  #steakmatejapan
    .work-mobile
      width 50% !important
      max-width 250px

  #networktenmediawebsite,
  #edappcom
    .work
      max-height 100%


@media screen and (min-width: 1025px)
  .works
    .work-img,
    .work-desc
      opacity 0
      transition(all 400ms)
      transition-delay 0ms !important
      position relative
      top 50%
      left 50%
    .work-img
      transform(translate(-60%, -50%))
    .work-desc
      transform(translate(-40%, -50%))

  .works
    &.active
      .work-img,
      .work-desc
        opacity 1
        transform(translate(-50%, -50%))

#intro
  .breaker
    display inline-block
    padding-top 40px
    &:after
      content ''
      background-image url('../assets/img/breaker.svg')
      background-repeat no-repeat
      background-size 100% 100%
      width auto
      height 12px
      display inline-block
      padding 0 37px
    &:last-of-type
      &:after
        content none

  .skill,
  .title,
  .about-me-desc
    opacity 0
    transition(all 400ms)
  .title
    transform(translate(-100px, 0))
  .skill
    display inline-block
    animation-name moveUp
    animation-duration 400ms
    animation-iteration-count 1
    animation-timing-function ease-in-out
    img
      width 100%
      height auto
  .about-me-desc,
  .title,
  .skill
    opacity 1
    transition-delay 900ms
    transition(opacity 400ms)
    transform(translate(0, 0))

for num in (1...5)
  .skill:nth-of-type({num})
    animation-delay (300+(num*100))ms
    transition-delay (300+(num*100))ms !important
