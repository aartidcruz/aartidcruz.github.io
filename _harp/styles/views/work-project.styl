.nav
  top 50px
  left 50%
  position absolute
  transform(translateX(-50%))
  transition(400ms)
  &.bottom
    top auto
    bottom 50px
    z-index 5
    position fixed
    background white
    border-radius 10px
    filter(drop-shadow(0px 20px 20px rgba(44,58,72,0.34)))

.nav-prev,
.nav-next
  font-size 20px
.nav-next
  padding-left 10px
  &:after
    content ''
    width auto
    top 1px
    height 12px
    padding 0 20px
    position relative
    display inline-block
    transform(rotate(90deg))
    background-size 100% 100%
    background-repeat no-repeat
    background-image url('../assets/breaker.svg')
.nav-prev
  padding-right 10px
  &:before
    content ''
    width auto
    top 1px
    height 12px
    padding 0 20px
    position relative
    display inline-block
    transform(rotate(-90deg))
    background-size 100% 100%
    background-repeat no-repeat
    background-image url('../assets/breaker.svg')

.work-project
  .hero
    padding 140px 20px 64px 20px
  .work-section
    padding 64px 20px

  .page-subtitle
    max-width 460px
    text-align center
    margin 0 auto
    font-size 1.3em

  .subtitle
    color $dark

  .breaker
    color $pink
    font-family $bold

  .mediumy-image
    max-width 700px
    width 100%

  .biggish-image
    max-width 800px
    width 100%

  .bigger-image
    max-width 900px
    width 100%

  .biggy-image
    width 100%
    height 600px
    background-size cover
    background-repeat no-repeat
    background-position center center
    overflow hidden
    &.kiosk-1
      background-image url('../assets/airtasker-ikea/kiosk-1.jpg')
    &.kiosk-2
      background-image url('../assets/airtasker-ikea/kiosk-2.jpg')
    &.kiosk-3
      background-image url('../assets/airtasker-ikea/kiosk-3.jpg')
    &.aircon-1,
