.work-project
  .hero
    padding 140px 20px 64px 20px
  .work-section
    padding 64px 20px

  .project-text
    max-width 640px
    margin 0 auto
    font-size 1.1em
    p
      margin 0.5em 0

  .page-subtitle
    max-width 600px
    text-align center
    margin 0 auto
    font-size 1.3em

  h2
    max-width 420px
    margin 0 auto
    font-size 2.5em

  .subtitle
    color $dark

  .border
    width 300px
    height 12px
    margin 0 auto
    background-size 100% auto
    background-repeat no-repeat
    background-image url(../assets/border.svg)

  .breaker
    color $pink
    font-family $bold

  .card
    background white
    filter(drop-shadow(0 5px 5px rgba(44,58,72,0.1)))
    border 1px solid rgba(44,58,72,0.1)
    border-radius 10px
    padding 20px

  .green-card
    background alpha($green, 0.2)
    padding 20px
    border-radius 10px

  .emoji
    @extend .text-xl
    font-size 2em
    padding 10px 0
    margin 0

  .smol-image
    max-width 400px

  .mediumy-image
    max-width 700px
    width 100%

  .biggish-image
    max-width 800px
    width 100%

  .bigger-image
    max-width 900px
    width 100%

  .biggy-image
    width 100%
    height 600px
    background-size cover
    background-repeat no-repeat
    background-position center center
    overflow hidden
    &.kiosk-1
      background-image url('../assets/airtasker-ikea/kiosk-1.jpg')
    &.kiosk-2
      background-image url('../assets/airtasker-ikea/kiosk-2.jpg')
    &.kiosk-3
      background-image url('../assets/airtasker-ikea/kiosk-3.jpg')
    &.aircon-1,
    &.aircon-2
      background-image url('../assets/aircon/aircon-1.png')
      background-size 800px auto
      background-color #28292D
    &.aircon-2
      background-image url('../assets/aircon/aircon-2.png')
    &.monzo-1
      background-image url('../assets/monzo-overdrafts/monzo-overdrafts.jpg')
    &.usage-1
      background-color #f7f7f7
      background-size contain
      background-image url('../assets/monzo-usage-goals/usage-goals.jpg')
      @media screen and (max-width 1025px)
        background-size cover

  .aircon-3
    max-width 900px
  .Aligner
    display flex
    align-items center
    justify-content center
  .Aligner-item
    max-width 50%
    &.aligner-right
      max-width 300px
      text-align left
  .Aligner-item--top
    align-self flex-start
  .Aligner-item--bottom
    align-self flex-end
